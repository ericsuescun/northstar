<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1>Sectores</h1>
      <%= link_to 'New Sector', new_sector_path, class: "btn btn-primary mb-3" %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nombre</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sectors.each do |sector| %>
            <tr>
              <td><%= sector.name %></td>
              <td><%= link_to 'Detalles', sector %></td>
              <td><%= link_to 'Editar', edit_sector_path(sector) %></td>
              <td><%= link_to 'Borrar', sector, method: :delete, data: { confirm: 'Confirmas el borrado?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>
    </div>
  </div>
</div>
