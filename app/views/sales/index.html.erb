<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1>Listado de Ventas</h1>
      <%= link_to 'Nueva Venta', new_sale_path, class: "btn btn-primary mb-3"  %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col-2">Fecha</th>
            <th scope="col-2">Cliente</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sales.each do |sale| %>
            <tr>
              <td><%= sale.customer.created_at.strftime("%m/%d/%Y") %></td>
              <td><%= sale.customer.name %></td>
              <td><%= link_to 'Agregar producto', sale %></td>
              <td><%= link_to 'Cambiar cliente', edit_sale_path(sale) %></td>
              <td><%= link_to 'Borrar', sale, method: :delete, data: { confirm: 'Confirmas el borrado?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>